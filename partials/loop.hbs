<div class="post-wrapper">
	{{#foreach posts}}

	<article class="{{post_class}} post-{{@index}}">
		<div class="inner">
			{{#if tags}}
				<aside class="post-tags">
					{{#foreach tags}}
						<a href='{{ url }}'>#{{ name }}</a>
					{{/foreach}}
				</aside>
			{{/if}}
			<div class="clear"></div>
			<header class="post-header">
				<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
				<div class="clear"></div>
			</header>

			<section class="post-excerpt">
				<p>{{excerpt}}&hellip;</p>
			</section>
			<div class="author-container">
				{{#if authors}}
						{{#foreach authors limit="1"}}
							<div class="post-author-wrap flex start-center-stretch">
								<div class="author-pic">
								<a href="{{url}}" title="{{name}}" class="author author-{{id}} {{slug}}">
								{{#if profile_image}}
									<img src="{{profile_image}}" alt="{{name}}" />
								{{else}}
									<img src="{{asset "images/blank-profile-picture.png"}}" alt="{{name}}" />	
								{{/if}}
								</a>
								</div>
								<div class="author-details">
									<a href="{{url}}" title="{{name}}" class="author author-{{id}} {{slug}}">
										{{name}}	
									</a>
									<p class="post-time"><span class="posted-on"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> <span class="reading-time"></span></span></p>
								</div>
							</div>
						{{/foreach}}
				{{/if}}
			</div>
		</div>
	</article>

	{{/foreach}}
</div>
